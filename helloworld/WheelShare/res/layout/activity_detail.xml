<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- TOP BAR -->
    <!-- DO NOT CHANGE ANYTHING -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:background="@color/topBarColor" >

        <!-- TEXT FOR TOP BAR -->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/topBarColor"
            android:text="@string/detail"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/topTextColor" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:background="@color/LIGHTGRAY" >

        <LinearLayout
            android:id="@+id/BACKGROUND_LAYOUT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/USER_INFORMATION"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="@drawable/infoboxshape"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/profile_picture"
                        android:layout_width="74dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/default_male" >
                    </ImageView>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/fullNameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Triet Nguyen"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/successRateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100% success"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/genderText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/DROP_SHADOW"
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="@drawable/drop_shadow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/TRIP_INFORMATION"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="@drawable/infoboxshape"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/TripInformation"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/GRAY" />

                <TextView
                    android:id="@+id/userTypeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Driver looking for Passenger"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/toAndFromText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Davis to Fremont"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Date: 05/31/2013"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/seatsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Seats Avaiable: 3"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/fareText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Fare per person: $10"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/DROP_SHADOW"
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="@drawable/drop_shadow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/DESCRIPTION_INFORMATION"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="@drawable/infoboxshape"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/Description"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/GRAY" />

                <TextView
                    android:id="@+id/descriptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Ride with me!"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/DROP_SHADOW"
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="@drawable/drop_shadow" />
            </LinearLayout>

            <TextView
                android:id="@+id/requestErrorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/requesterror"
                android:textColor="@color/textErrorColor"
                android:textSize="20sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/DETAIL_BUTTONS"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/backBttn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight=".40"
                    android:text="@string/back"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/startTripBttn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight=".40"
                    android:text="@string/starttrip"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/finishTripBttn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight=".40"
                    android:text="@string/finishtrip"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/payBttn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight=".40"
                    android:text="@string/pay"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/requestBttn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight=".40"
                    android:text="@string/request"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/REQUEST_BUTTONS"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <Button
                    android:id="@+id/backkBttn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight=".30"
                    android:text="@string/back"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/rejectBttn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:text="@string/reject"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/acceptBttn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight=".30"
                    android:text="@string/accept"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/RATING_BUTTONS"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <Button
                    android:id="@+id/backkkBttn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight=".30"
                    android:text="@string/back"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/badBttn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:text="@string/bad"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/goodBttn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight=".30"
                    android:text="@string/good"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>