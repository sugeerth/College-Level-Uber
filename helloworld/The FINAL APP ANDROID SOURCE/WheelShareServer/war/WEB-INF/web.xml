<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>post</servlet-name>
		<servlet-class>wheelshareserver.PostFormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>post</servlet-name>
		<url-pattern>/post</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>search</servlet-name>
		<servlet-class>wheelshareserver.SearchFormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>search</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>updaterating</servlet-name>
		<servlet-class>wheelshareserver.UpdateRatingFormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updaterating</servlet-name>
		<url-pattern>/updaterating</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>request</servlet-name>
		<servlet-class>wheelshareserver.RequestFormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>request</servlet-name>
		<url-pattern>/request</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>updateseats</servlet-name>
		<servlet-class>wheelshareserver.UpdateSeatsFormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateseats</servlet-name>
		<url-pattern>/updateseats</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>escrow</servlet-name>
		<servlet-class>wheelshareserver.EscrowFormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>escrow</servlet-name>
		<url-pattern>/escrow</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>register</servlet-name>
		<servlet-class>wheelshareserver.RegisterFormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>wheelshareserver.LoginFormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>getrequest</servlet-name>
		<servlet-class>wheelshareserver.GetRequestFormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>getrequest</servlet-name>
		<url-pattern>/getrequest</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>updaterequest</servlet-name>
		<servlet-class>wheelshareserver.UpdateRequestFormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updaterequest</servlet-name>
		<url-pattern>/updaterequest</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>updateescrow</servlet-name>
		<servlet-class>wheelshareserver.UpdateEscrowFormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateescrow</servlet-name>
		<url-pattern>/updateescrow</url-pattern>
	</servlet-mapping>


	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
